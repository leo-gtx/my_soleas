<!--==========================
      Team Section
    ============================-->
    <section id="team" class="section-bg">
      <div class="container">
        <div class="section-header">
          <h3>Team</h3>
        </div>

        <div class="row">
          {% for member in team %}
          <div class="col-lg-3 col-md-6 wow fadeInUp">
            <div class="member">
              <img src="{{member.avatar|split('public/')[1]}}" class="img-fluid" alt="{{member.name}}">
              <div class="member-info">
                <div class="member-info-content">
                  <h4>{{member.name}}</h4>
                  <span>{{member.title}}</span>
                  <div class="social">
                    <a href="{{member.socialNetworks[0]}}"><i class="fa fa-twitter"></i></a>
                    <a href="{{member.socialNetworks[1]}}"><i class="fa fa-facebook"></i></a>
                    <a href="{{member.socialNetworks[2]}}"><i class="fa fa-linkedin"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}

         

        </div>

      </div>
    </section><!-- #team -->
